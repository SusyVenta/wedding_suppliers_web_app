                                    <p>No reviews yet</p>
                                <% } else{ %>
                                    <div class="stars-rating">
                                        <% if (product.stars>= 1) { %>
                                            <span class="fa fa-star checked"></span>
                                            <% } else{ %>
                                                <span class="fa fa-star"></span>
                                                <% } %>
